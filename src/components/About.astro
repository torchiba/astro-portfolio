---
import { Plus } from "@lucide/astro";

interface Props {
  title: string;
  photo?: string;
  Content: any;
}

const { title, photo, Content } = Astro.props;
---

<section id="about" class="py-20 px-4 bg-base-200">
  <div class="max-w-4xl mx-auto">
    <div class="card card-side bg-base-100 shadow-sm">
      {
        photo && (
          <figure class="shrink-0 w-48">
            <img src={photo} alt={title} />
          </figure>
        )
      }
      <div class="card-body">
        <h2 class="card-title text-2xl">{title}</h2>
        <p class="text-lg">
          <Content />
        </p>
      </div>
    </div>
  </div>
</section>
